    <script>
        var dropdown = document.getElementById("dropdown");
        var isDropdownOpen = false;

        function toggleDropdown() {
            if (isDropdownOpen) {
                dropdown.classList.remove("show");
                isDropdownOpen = false;
            } else {
                dropdown.classList.add("show");
                isDropdownOpen = true;
            }
        }
    </script>
